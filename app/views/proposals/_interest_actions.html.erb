<span class="interest-content">
  <% if show_follow_action? proposal %>
    <a id="follow-expand-proposal-<%= proposal.id %>" data-toggle="follow-drop-proposal-<%= proposal.id %>" title="<%= follow_entity_text('proposal') %>">
      <%= t('shared.follow') %>
    </a>
    <div class="dropdown-pane" id="follow-drop-proposal-<%= proposal.id %>" data-dropdown data-auto-focus="true">
      <%= link_to follow_entity_text('proposal'), follow_proposal_path(proposal), method: :put, remote: true, id: "follow-proposal-#{ proposal.id }" %>
    </div>
  <% end %>

  <% if show_unfollow_action? proposal %>
    <a id="unfollow-expand-proposal-<%= proposal.id %>" data-toggle="unfollow-drop-proposal-<%= proposal.id %>" title="<%= unfollow_entity_text('proposal') %>">
        <%= t('shared.unfollow') %>
    </a>
    <div class="dropdown-pane" id="unfollow-drop-proposal-<%= proposal.id %>" data-dropdown data-auto-focus="true">
      <%= link_to unfollow_entity_text('proposal'), unfollow_proposal_path(proposal), method: :put, remote: true, id: "unfollow-proposal-#{ proposal.id }" %>
    </div>
  <% end %>
</span>
