<ul class="accordion" data-accordion data-allow-all-closed="true">
  <% @followed_entities.each do |entity| %>
    <li class="accordion-item" data-accordion-item>
      <a href="#" class="accordion-title">
        <span class="icon">
          <i class="icon icon-<%= entity_icon(entity) %>"></i>
        </span>
        <span class="title">
          <strong><%= entity_title(entity) %></strong>
        </span>
      </a>
      <div class="accordion-content" data-tab-content>
        <table>
          <tbody>
            <% @follows.where(followable_type: entity).each do |follow| %>
              <% if entity == "Proposal" %>
                <%= render "proposal", proposal: follow.followable %>
              <% elsif entity == "Budget::Investment" %>
                <%= render "budget_investment", budget_investment: follow.followable %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </li>
  <% end %>
</ul>
