<%= form_tag admin_verification_residents_path, method: :get, remote: true  do %>
  <div class="small-6 column">
    <div class="input-group">
      <%= text_field_tag :key, "",
                         placeholder: t("admin.verification.residents.search.key.placeholder") %>
    </div>
  </div>
  <div class="small-6 column">
    <div class="input-group">
      <%= text_field_tag :value, "",
                         placeholder: t("admin.verification.residents.search.value.placeholder") %>
      <div class="input-group-button">
        <%= submit_tag t("admin.verification.residents.search.submit"), class: "button" %>
      </div>
    </div>
  </div>
<% end %>
