<tr id="<%= dom_id(field) %>">
  <td class="text-center"><%= field.position %></td>
  <td><%= field.name %></td>
  <td><%= handlers_text_representation(field).join(", ") %></td>
  <td><%= field.label %></td>
  <td class="text-center"><%= boolean_text_representation(field.required)  %></td>
  <td class="text-center"><%= boolean_text_representation(field.confirmation_validation)  %></td>
  <td class="text-center"><%= field.format  %></td>
  <td class="text-right">
    <%= link_to t("admin.wizards.verification.fields.index.edit"),
                edit_admin_wizards_verification_field_path(field),
                class: "button hollow" %>
    <%= link_to t("admin.wizards.verification.fields.index.delete"),
                admin_wizards_verification_field_path(field),
                method: :delete,
                class: "button hollow alert",
                data: { confirm: t("admin.actions.confirm") } %>
  </td>
</tr>
