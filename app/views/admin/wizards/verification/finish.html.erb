<%= render "admin/wizards/header_steps", back_step: back_step_path("finish"),
                                         wizard: "verification" %>

<div class="medium-12 columns">
  <div class="columns">
    <h2><%= t("admin.wizards.verification.finish.title") %></h2>
    <p><%= t("admin.wizards.verification.finish.description_html") %></p>

    <% if @fields.empty? %>
      <%= verification_fields_no_fields_defined %>
    <% else %>
      <div class="horizontal-scroll">
        <table>
          <%= render partial: "admin/wizards/verification/fields/thead" %>

          <tbody>
            <%= render partial: "admin/wizards/verification/fields/field", collection: @fields %>
          </tbody>
        </table>
      </div>
    <% end %>
    <div class="margin-bottom margin-top">
      <%= link_to t("admin.wizards.verification.finish.btn_finish"), admin_root_path, class: "button" %>
    </div>
  </div>
</div>
