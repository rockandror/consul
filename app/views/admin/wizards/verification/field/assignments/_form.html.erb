<%= form_for [:admin, :wizards, @assignment] do |f| %>

  <%= render "shared/errors", resource: @assignment %>

  <div class="row">
    <div class="row small-12 column">
      <%= f.select :verification_field_id, options_for_verification_fields %>
    </div>
  </div>

  <% if remote_census_handler?(@handler) %>
    <div class="row">
      <div class="row small-12 column">
        <%= f.text_field :request_path %>
        <p>
          <%= t("admin.wizards.verification.fields.assignments.form.request_path") %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="row small-12 column">
        <%= f.text_field :response_path %>
        <p><%= t("admin.wizards.verification.fields.assignments.form.response_path") %></p>
      </div>
    </div>
  <% end %>

  <div id="js-verification-handler-field-assigment-format" class="row"
       style="<% verification_field_assignment_style(@assignment) %>">
    <div class="row small-12 column">
      <%= f.text_field :format, hint: t("admin.wizards.verification.field.assignments.form.format.help") %>
    </div>
  </div>

  <div class="row margin-bottom">
    <div class="row small-12 column">
      <%= f.submit class: "button success expanded",
                   value: t("admin.wizards.verification.field.assignments.form.submit_button") %>
    </div>
  </div>
<% end %>
