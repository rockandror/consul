<div class="columns padding v-aligner">
  <div class="medium-6 columns">
    <h3><%= t("admin.wizards.header_steps.#{wizard}.title") %></h3>
    <% if defined?(current_step) %>
      <span class="current-step"><%= t("admin.wizards.header_steps.step") %> <%= current_step %> <%= t("admin.wizards.header_steps.step_of") %> <%= total_steps %></span>
    <% end %>
  </div>

  <div class="medium-6 columns text-right">
    <% if defined?(back_step) %>
      <%= link_to back_step, class: "btn-back-step" do %>
        <i class="icon-arrow-left"></i>
        <%= t("admin.wizards.header_steps.back_step") %>
      <% end %>
    <% end %>
    <% if defined?(next_step) %>
      <%= link_to t("admin.wizards.header_steps.next_step"), next_step, class: "button" %>
    <% end %>
  </div>
</div>
<hr>
