<div class="verification-process row">

  <div class="small-12 medium-9 column">
    <h1>Verification process</h1>
  </div>

  <div class="row column">
    <%= form_for @process, url: verification_process_path do |f| %>
      <% @process.fields.each do |_, field| %>
        <div class="small-12 column">
          <%= f.label field.name, field.label %>
          <%= f.text_field field.name, label: false %>
        </div>
      <% end %>

      <div class="actions small-12 column">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
