<%= render "errors", process: @process %>

<%= form_for @process, url: verification_process_path do |f| %>
  <% @process.fields.each do |_, field| %>
    <div class="small-12 column">
      <%= f.label field.name, field.label %>
      <%= f.text_field field.name, label: false, hint: field_hint(field) %>
      <% if field.confirmation_validation? %>
          <%= f.label "#{field.name}_confirmation", "#{field.label} confirmation" %>
          <%= f.text_field "#{field.name}_confirmation", label: false, hint: "Confirme su #{field.name}" %>
      <% end %>
    </div>
  <% end %>

  <div class="actions small-12 column">
    <%= f.submit "Save" %>
  </div>
<% end %>
